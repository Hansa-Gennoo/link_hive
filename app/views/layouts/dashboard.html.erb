<!-- app/views/layouts/dashboard.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="dashboard">
    <header>
      <h1>Dashboard</h1>

      <div class="user-info">
        <%= current_user.username %>
      </div>

      <div class="side-bar">
        <nav>
          <%= link_to "Add Link", new_dashboard_landing_page_link_path(@landing_page) %>
          <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %>
        </nav>

      </div>


      <% if @landing_page %>
        <div class="page-view">
          <%= link_to "View Page", public_landing_page_path(@landing_page.user.username), target: "_blank" %>
        </div>
      <% end %>


    </header>

    <main>
      <%#= yield %>
    </main>
  </body>
</html>
